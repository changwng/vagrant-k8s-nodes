apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: apigateway-ingress
  labels:
    env: production
    tier: backend
    app: apigateway
    name: apigateway-ingress
spec:
  rules:
    - host: api.localhost
      http:
        paths:
          - path: /
            backend:
              serviceName: apigateway
              servicePort: 8000