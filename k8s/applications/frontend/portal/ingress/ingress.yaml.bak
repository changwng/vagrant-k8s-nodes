apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: frontend-portal-ingress
  labels:
    env: production
    tier: frontend
    app: portal
    name: frontend-portal-ingress
spec:
  rules:
    - host: portal.localhost
      http:
        paths:
          - path: /
            backend:
              serviceName: frontend-portal
              servicePort: 3000